<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Food" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary Brand Color -->
        <item name="colorPrimary">@color/primary_gradient_start</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/accent_blue</item>
        <item name="colorSecondaryVariant">@color/info_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Surface Colors -->
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnSurface">@color/text_primary_light</item>
        
        <!-- Background -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorOnBackground">@color/text_primary_light</item>
        
        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        
        <!-- Navigation Bar -->
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <!-- Window -->
        <item name="android:windowBackground">@color/background_light</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowActivityTransitions">true</item>
        
        <!-- Text Appearance -->
        <item name="android:textColorPrimary">@color/text_primary_light</item>
        <item name="android:textColorSecondary">@color/text_secondary_light</item>
        <item name="android:textColorHint">@color/text_hint_light</item>
        
        <!-- Ripple Effect -->
        <item name="android:colorControlHighlight">@color/primary_light</item>
        
        <!-- Material Components -->
        <item name="materialCardViewStyle">@style/CardStyle</item>
        <item name="textInputStyle">@style/InputFieldStyle</item>
        <item name="materialButtonStyle">@style/ButtonPrimary</item>
    </style>
</resources>