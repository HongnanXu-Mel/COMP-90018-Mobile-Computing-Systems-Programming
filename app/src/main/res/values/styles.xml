<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Bottom Navigation Styles -->
    <style name="BottomNavText" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="BottomNavTextInactive" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <!-- Brand Logo Style -->
    <style name="AppLogoStyle">
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textColor">@color/logo_primary</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:shadowColor">@color/logo_shadow</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">6</item>
        <item name="android:elevation">3dp</item>
    </style>
    
    <!-- Typography Styles -->
    <style name="WelcomeHeaderStyle">
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/text_primary_light</item>
        <item name="android:letterSpacing">-0.015</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>
    
    <style name="NavTextStyle">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/primary_gradient_start</item>
        <item name="android:letterSpacing">0.01</item>
    </style>
    
    <style name="SectionTitleStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/text_primary_light</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>
    
    <style name="BodyTextStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/text_primary_light</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
    </style>
    
    <style name="CaptionTextStyle">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/text_secondary_light</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>
    
    <!-- Dialog Styles -->
    <style name="FullScreenDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>
    
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
    
    <style name="BottomSheetDialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>
    
    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
    
    <!-- Widget Styles -->
    <style name="BottomNavLabelStyle" parent="Widget.Design.BottomNavigationView">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="elevation">8dp</item>
    </style>

    <style name="RatingBarStyle" parent="Widget.AppCompat.RatingBar">
        <item name="colorControlNormal">@color/gray_200</item>
        <item name="colorControlActivated">@color/rating_icon_color</item>
    </style>
    
    <style name="CardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/corner_radius_large</item>
        <item name="cardElevation">@dimen/elevation_low</item>
        <item name="contentPadding">@dimen/padding_medium</item>
        <item name="cardBackgroundColor">@color/card_background</item>
    </style>
    
    <style name="ButtonPrimary" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="cornerRadius">@dimen/corner_radius_medium</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="elevation">@dimen/elevation_medium</item>
    </style>
    
    <style name="InputFieldStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">@dimen/corner_radius_medium</item>
        <item name="boxCornerRadiusTopEnd">@dimen/corner_radius_medium</item>
        <item name="boxCornerRadiusBottomStart">@dimen/corner_radius_medium</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/corner_radius_medium</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
    </style>
</resources>
