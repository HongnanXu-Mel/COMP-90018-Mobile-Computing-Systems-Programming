<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".LoginActivity">

    <!-- Main Content Container -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:paddingStart="@dimen/padding_xlarge"
            android:paddingTop="32dp"
            android:paddingEnd="@dimen/padding_xlarge"
            android:paddingBottom="@dimen/padding_xlarge"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="50dp">

            <!-- Premium App Logo at Top -->
            <FrameLayout
                android:id="@+id/logoContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_large"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!-- Main Logo Text -->
                <TextView
                    android:id="@+id/tvAppName"
                    style="@style/AppLogoStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name_display" />

                <!-- Accent Dot -->
                <ImageView
                    android:id="@+id/ivAccentDot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="4dp"
                    android:contentDescription="@string/accent_dot"
                    android:src="@drawable/logo_accent_dot" />

            </FrameLayout>

            <!-- Content Container - Centered vertically -->
            <FrameLayout
                android:id="@+id/contentContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_xlarge"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/logoContainer"
                app:layout_constraintVertical_bias="0.2">

                <!-- Login Form (Default visible) -->
                <LinearLayout
                    android:id="@+id/loginForm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <!-- Dynamic Header Text -->
                    <TextView
                        android:id="@+id/tvHeader"
                        style="@style/WelcomeHeaderStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_large"
                        android:gravity="center"
                        android:text="@string/welcome_back_header" />



                    <!-- Tab Layout -->
                    <LinearLayout
                        android:id="@+id/tabLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_medium"
                        android:background="@drawable/tab_container_background"
                        android:orientation="horizontal"
                        android:padding="4dp">

                        <TextView
                            android:id="@+id/tabLogin"
                            android:layout_width="0dp"
                            android:layout_height="44dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="3dp"
                            android:background="@drawable/tab_background_selected"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="@drawable/tab_focus_selector"
                            android:gravity="center"
                            android:text="@string/login"
                            android:textColor="@color/primary_gradient_start"
                            android:textSize="@dimen/text_size_medium"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tabRegister"
                            android:layout_width="0dp"
                            android:layout_height="44dp"
                            android:layout_weight="1"
                            android:layout_marginStart="3dp"
                            android:background="@drawable/tab_background_unselected"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="@drawable/tab_focus_selector"
                            android:gravity="center"
                            android:text="@string/tab_register"
                            android:textColor="@color/tab_unselected_text"
                            android:textSize="@dimen/text_size_medium"
                            android:textStyle="bold" />

                    </LinearLayout>

                    
                    <!-- Email Input -->

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:textColorHint="@color/text_hint_light"
                        app:boxBackgroundMode="none"
                        app:boxStrokeColor="@color/input_border_light"
                        app:hintEnabled="false"
>


                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etLoginEmail"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/input_field_height"
                            android:background="@drawable/input_field_background"
                            android:drawableStart="@drawable/ic_email"
                            android:drawablePadding="@dimen/padding_medium"
                            android:gravity="center_vertical"
                            android:hint="@string/email_hint"
                            android:inputType="textEmailAddress"
                            android:nextFocusDown="@+id/etLoginPassword"
                            android:nextFocusForward="@+id/etLoginPassword"
                            android:paddingStart="20dp"
                            android:paddingTop="16dp"
                            android:paddingEnd="20dp"
                            android:paddingBottom="16dp"
                            android:textColor="@color/text_primary_light"
                            android:textColorHint="@color/text_hint_light"
                            android:textStyle="bold"
                            android:typeface="sans" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Password Input -->
                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_small">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/passwordInputLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColorHint="@color/text_hint_light"
                            app:boxBackgroundMode="none"
                            app:boxStrokeColor="@color/input_border_light"
                            app:hintEnabled="false"
                            app:elevation="0dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etLoginPassword"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/input_field_height"
                                android:background="@drawable/input_field_background"
                                android:drawableStart="@drawable/ic_lock"
                                android:drawablePadding="@dimen/padding_medium"
                                android:gravity="center_vertical"
                                android:hint="@string/password_hint"
                                android:inputType="textPassword"
                                android:nextFocusDown="@+id/btnLogin"
                                android:nextFocusForward="@+id/btnLogin"
                                android:paddingStart="20dp"
                                android:paddingTop="16dp"
                                android:paddingEnd="52dp"
                                android:paddingBottom="16dp"
                                android:textColor="@color/text_primary_light"
                                android:textColorHint="@color/text_hint_light"
                                android:textStyle="bold"
                                android:typeface="sans" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <ImageView
                            android:id="@+id/ivPasswordToggle"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:contentDescription="@string/toggle_password_visibility"
                            android:src="@drawable/ic_eye_visible"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            app:layout_constraintEnd_toEndOf="@id/passwordInputLayout"
                            app:layout_constraintTop_toTopOf="@id/passwordInputLayout"
                            app:layout_constraintBottom_toBottomOf="@id/passwordInputLayout"
                            app:layout_constraintVertical_bias="0.5"
                            android:layout_marginEnd="16dp" />

                    </androidx.constraintlayout.widget.ConstraintLayout>



                    <!-- Login Error Text -->
                    <TextView
                        android:id="@+id/tvLoginError"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/logout_red"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:visibility="gone" />



                    <!-- Remember Me and Forgot Password Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:layout_marginBottom="@dimen/margin_medium"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/cbRememberMe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/primary_gradient_start"
                            android:text="@string/remember_me"
                            android:textColor="@color/text_secondary_light"
                            android:textSize="@dimen/text_size_medium"
                            android:textStyle="normal"
                            android:paddingStart="4dp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/tvForgotPassword"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:focusable="true"
                            android:text="@string/forgot_password"
                            android:textColor="@color/accent_blue"
                            android:textSize="@dimen/text_size_medium"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Login Button -->
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnLogin"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height"
                        android:background="@drawable/button_primary_background"
                        android:elevation="0dp"
                        android:stateListAnimator="@null"
                        android:text="@string/login_button"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        tools:layout_editor_absoluteX="32dp"
                        tools:layout_editor_absoluteY="540dp" />

                    <!-- Bypass Login Button -->
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnBypassLogin"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height"
                        android:layout_marginTop="@dimen/margin_small"
                        android:background="@drawable/button_secondary_background"
                        android:elevation="0dp"
                        android:stateListAnimator="@null"
                        android:text="@string/bypass_login"
                        android:textAllCaps="false"
                        android:textColor="@color/accent_blue"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:layout_editor_absoluteX="32dp"
                        tools:layout_editor_absoluteY="600dp" />

                </LinearLayout>


            </FrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>