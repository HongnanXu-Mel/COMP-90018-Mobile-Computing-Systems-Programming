<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/activity_card_background"
    android:orientation="horizontal"
    android:padding="16dp"
    android:gravity="center_vertical"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <!-- User Avatar -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivUserAvatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_person"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/logo_primary"
        android:scaleType="centerCrop" />

    <!-- Content Area -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="12dp">

        <!-- User Name and Timestamp Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@color/profile_text_primary"
                android:textSize="15sp"
                android:fontFamily="sans-serif-medium"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="User" />

            <TextView
                android:id="@+id/tvTimestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:textColor="@color/profile_text_tertiary"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                tools:text="1h"
                />

        </LinearLayout>

        <!-- Activity Text -->
        <TextView
            android:id="@+id/tvActivityText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/profile_text_secondary"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="voted accurate on your review" />

        <!-- Restaurant Name -->
        <TextView
            android:id="@+id/tvRestaurantName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="16dp"
            android:textColor="@color/profile_text_secondary"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Restaurant" 
            />

    </LinearLayout>

    <!-- Review Image -->
    <ImageView
        android:id="@+id/ivActivityIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:scaleType="centerCrop"
        android:background="@drawable/activity_card_image_background"
        android:clipToOutline="true"
        tools:src="@drawable/ic_restaurant"
        tools:targetApi="31" />

</LinearLayout>