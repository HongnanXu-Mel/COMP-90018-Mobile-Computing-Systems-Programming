<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/change_password_title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary_light"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Current Password -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_medium">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/currentPasswordInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/text_hint_light"
            app:boxBackgroundMode="none"
            app:boxStrokeColor="@color/input_border_light"
            app:hintEnabled="false"
            app:elevation="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etCurrentPassword"
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_field_height"
                android:background="@drawable/input_field_background"
                android:drawableStart="@drawable/ic_lock"
                android:drawablePadding="@dimen/padding_medium"
                android:gravity="center_vertical"
                android:hint="@string/current_password"
                android:inputType="textPassword"
                android:nextFocusDown="@+id/etNewPassword"
                android:nextFocusForward="@+id/etNewPassword"
                android:textColor="@color/text_primary_light"
                android:textColorHint="@color/text_hint_light"
                android:textStyle="bold"
                android:typeface="sans" />

        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/ivCurrentPasswordToggle"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_eye_visible"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/toggle_password_visibility"
            app:layout_constraintEnd_toEndOf="@id/currentPasswordInputLayout"
            app:layout_constraintTop_toTopOf="@id/currentPasswordInputLayout"
            app:layout_constraintBottom_toBottomOf="@id/currentPasswordInputLayout"
            app:layout_constraintVertical_bias="0.5"
            android:layout_marginEnd="16dp" />

        <!-- Current Password Error Text -->
        <TextView
            android:id="@+id/tvCurrentPasswordError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/logout_red"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/currentPasswordInputLayout" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- New Password -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_medium">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/newPasswordInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/text_hint_light"
            app:boxBackgroundMode="none"
            app:boxStrokeColor="@color/input_border_light"
            app:hintEnabled="false"
            app:elevation="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNewPassword"
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_field_height"
                android:background="@drawable/input_field_background"
                android:drawableStart="@drawable/ic_lock"
                android:drawablePadding="@dimen/padding_medium"
                android:gravity="center_vertical"
                android:hint="@string/new_password"
                android:inputType="textPassword"
                android:nextFocusDown="@+id/etConfirmPassword"
                android:nextFocusForward="@+id/etConfirmPassword"
                android:textColor="@color/text_primary_light"
                android:textColorHint="@color/text_hint_light"
                android:textStyle="bold"
                android:typeface="sans" />

        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/ivNewPasswordToggle"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_eye_visible"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/toggle_password_visibility"
            app:layout_constraintEnd_toEndOf="@id/newPasswordInputLayout"
            app:layout_constraintTop_toTopOf="@id/newPasswordInputLayout"
            app:layout_constraintBottom_toBottomOf="@id/newPasswordInputLayout"
            app:layout_constraintVertical_bias="0.5"
            android:layout_marginEnd="16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- New Password Error Text -->
    <TextView
        android:id="@+id/tvNewPasswordError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/logout_red"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:visibility="gone" />

    <!-- Confirm New Password -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_medium">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/confirmPasswordInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/text_hint_light"
            app:boxBackgroundMode="none"
            app:boxStrokeColor="@color/input_border_light"
            app:hintEnabled="false"
            app:elevation="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_field_height"
                android:background="@drawable/input_field_background"
                android:drawableStart="@drawable/ic_lock_check"
                android:drawablePadding="@dimen/padding_medium"
                android:gravity="center_vertical"
                android:hint="@string/confirm_new_password"
                android:inputType="textPassword"
                android:nextFocusDown="@+id/btnConfirm"
                android:nextFocusForward="@+id/btnConfirm"
                android:textColor="@color/text_primary_light"
                android:textColorHint="@color/text_hint_light"
                android:textStyle="bold"
                android:typeface="sans" />

        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/ivConfirmPasswordToggle"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_eye_visible"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/toggle_password_visibility"
            app:layout_constraintEnd_toEndOf="@id/confirmPasswordInputLayout"
            app:layout_constraintTop_toTopOf="@id/confirmPasswordInputLayout"
            app:layout_constraintBottom_toBottomOf="@id/confirmPasswordInputLayout"
            app:layout_constraintVertical_bias="0.5"
            android:layout_marginEnd="16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Confirm Password Error Text -->
    <TextView
        android:id="@+id/tvConfirmPasswordError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/logout_red"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:visibility="gone" />

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:textColor="@color/logo_accent"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginEnd="8dp"
            style="@style/Widget.Material3.Button.TextButton" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnConfirm"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height"
            android:background="@drawable/gradient_button_background"
            android:text="@string/confirm"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingStart="@dimen/padding_xlarge"
            android:paddingEnd="@dimen/padding_xlarge" />

    </LinearLayout>

</LinearLayout>