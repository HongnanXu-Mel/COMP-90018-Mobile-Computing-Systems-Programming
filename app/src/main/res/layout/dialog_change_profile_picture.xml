<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/dialog_rounded_background"
    android:padding="24dp"
    android:gravity="center_vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/change_profile_picture_title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary_light"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Current Profile Picture -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivCurrentProfilePicture"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="32dp"
        android:src="@drawable/ic_person"
        app:civ_border_width="3dp"
        app:civ_border_color="@color/primary_gradient_start" />

    <!-- Options -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <!-- Take Photo -->
        <LinearLayout
            android:id="@+id/btnTakePhoto"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/secondary_button_background"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_camera"
                android:tint="@color/primary_gradient_start" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:text="@string/take_photo"
                android:textColor="@color/text_primary_light"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>

        <!-- Choose from Gallery -->
        <LinearLayout
            android:id="@+id/btnChooseFromGallery"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/secondary_button_background"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_photo"
                android:tint="@color/primary_gradient_start" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:text="@string/choose_from_gallery"
                android:textColor="@color/text_primary_light"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>

        <!-- Remove Photo -->
        <LinearLayout
            android:id="@+id/btnRemovePhoto"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/remove_button_background"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_delete"
                android:tint="@color/modern_error" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:text="@string/remove_photo"
                android:textColor="@color/modern_error"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>

    </LinearLayout>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="@string/cancel"
            android:textColor="@color/logo_accent"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            style="@style/Widget.Material3.Button.TextButton" />

    </LinearLayout>

</LinearLayout>