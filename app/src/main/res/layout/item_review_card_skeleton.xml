<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp">

    <!-- Main Card Container -->
    <LinearLayout
        android:id="@+id/contentCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="vertical"
        android:background="@drawable/review_card_background"
        android:clipToOutline="true">

        <!-- Image Container with skeleton -->
        <FrameLayout
            android:id="@+id/imageContainer"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/image_rounded_top_12"
            android:clipToOutline="true">

            <!-- Skeleton shimmer effect for image -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/profile_border" />

            <!-- Shimmer overlay -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/skeleton_shimmer" />
        </FrameLayout>

        <!-- Content Section -->
        <LinearLayout
            android:id="@+id/contentSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Caption skeleton -->
            <View
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:background="@drawable/skeleton_shimmer"
                android:layout_marginBottom="8dp" />

            <View
                android:layout_width="0.7dp"
                android:layout_height="16dp"
                android:background="@drawable/skeleton_shimmer"
                android:layout_marginBottom="8dp" />

            <!-- Rating and Accuracy Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Rating skeleton -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="16dp">

                    <View
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:background="@drawable/skeleton_shimmer"
                        android:layout_marginEnd="4dp" />

                    <View
                        android:layout_width="24dp"
                        android:layout_height="14dp"
                        android:background="@drawable/skeleton_shimmer" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <!-- Accuracy skeleton -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:background="@drawable/skeleton_shimmer"
                        android:layout_marginEnd="4dp" />

                    <View
                        android:layout_width="32dp"
                        android:layout_height="14dp"
                        android:background="@drawable/skeleton_shimmer" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>


