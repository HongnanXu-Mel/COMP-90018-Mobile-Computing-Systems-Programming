<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".ForgotPasswordActivity">

    <!-- Main Content Container -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:paddingStart="@dimen/padding_xlarge"
            android:paddingTop="32dp"
            android:paddingEnd="@dimen/padding_xlarge"
            android:paddingBottom="@dimen/padding_xlarge">

            <!-- Premium App Logo at Top -->
            <FrameLayout
                android:id="@+id/logoContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_large"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!-- Main Logo Text -->
                <TextView
                    android:id="@+id/tvAppName"
                    style="@style/AppLogoStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name_display" />

                <!-- Accent Dot -->
                <ImageView
                    android:id="@+id/ivAccentDot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="4dp"
                    android:contentDescription="@string/accent_dot"
                    android:src="@drawable/logo_accent_dot" />

            </FrameLayout>

            <!-- Back Button -->
            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="@string/back_button"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/logoContainer"
                app:layout_constraintBottom_toBottomOf="@id/logoContainer" />

            <!-- Content Container - Centered vertically -->
            <FrameLayout
                android:id="@+id/contentContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_xlarge"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/logoContainer"
                app:layout_constraintVertical_bias="0.2">

                <!-- Main Form Container -->
                <LinearLayout
                    android:id="@+id/mainFormContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Title -->
                    <TextView
                        android:id="@+id/tvTitle"
                        style="@style/WelcomeHeaderStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_medium"
                        android:gravity="center"
                        android:text="@string/forgot_password_title" />

                    <!-- Subtitle -->
                    <TextView
                        android:id="@+id/tvSubtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_large"
                        android:gravity="center"
                        android:text="@string/forgot_password_subtitle"
                        android:textColor="@color/text_secondary_light"
                        android:textSize="@dimen/text_size_medium" />

                <!-- Email Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:textColorHint="@color/text_hint_light"
                    app:boxBackgroundMode="none"
                    app:boxStrokeColor="@color/input_border_light"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/input_field_height"
                        android:background="@drawable/input_field_background"
                        android:drawableStart="@drawable/ic_email"
                        android:drawablePadding="@dimen/padding_medium"
                        android:gravity="center_vertical"
                        android:hint="@string/email_hint"
                        android:inputType="textEmailAddress"
                        android:paddingStart="20dp"
                        android:paddingTop="16dp"
                        android:paddingEnd="20dp"
                        android:paddingBottom="16dp"
                        android:textColor="@color/text_primary_light"
                        android:textColorHint="@color/text_hint_light"
                        android:textStyle="bold"
                        android:typeface="sans" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Error Message -->
                <TextView
                    android:id="@+id/tvError"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/logout_red"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:visibility="gone" />

                <!-- Success Message -->
                <TextView
                    android:id="@+id/tvSuccess"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary_gradient_start"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:visibility="gone" />

                <!-- Send Reset Email Button -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSendResetEmail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:background="@drawable/button_primary_background"
                    android:elevation="0dp"
                    android:stateListAnimator="@null"
                    android:text="@string/send_reset_email"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Back to Login Button -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnBackToLogin"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:background="@drawable/button_secondary_background"
                    android:elevation="0dp"
                    android:stateListAnimator="@null"
                    android:text="@string/back_to_login"
                    android:textAllCaps="false"
                    android:textColor="@color/accent_blue"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                </LinearLayout>

            </FrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
