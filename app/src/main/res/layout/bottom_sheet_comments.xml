<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comments"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/profile_text_primary"
        android:layout_marginBottom="12dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvComments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tvNoComments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No comments yet. Be the first to comment!"
        android:textSize="14sp"
        android:textColor="@color/profile_text_tertiary"
        android:gravity="center"
        android:padding="24dp"
        android:visibility="gone"
        android:layout_marginBottom="16dp" />

    <!-- Comment Input Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/edittext_rounded"
        android:padding="12dp">

        <EditText
            android:id="@+id/etCommentInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="Add a comment..."
            android:textSize="14sp"
            android:textColorHint="@color/text_hint_light"
            android:textColor="@color/text_primary_light"
            android:inputType="textMultiLine"
            android:maxLines="3"
            android:layout_marginEnd="8dp" />

        <ImageView
            android:id="@+id/btnSendComment"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_right"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            android:tint="@color/primary_color" />

    </LinearLayout>

</LinearLayout>


