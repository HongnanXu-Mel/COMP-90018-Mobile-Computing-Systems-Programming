<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="16dp">

    <!-- Restaurant Info Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tv_restaurant_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Restaurant Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tv_restaurant_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="8dp" />

        <!-- Navigation Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_navigate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get direction"
            android:textColor="@color/white"
            android:background="@drawable/button_navigation_background"
            android:drawableStart="@drawable/ic_navigation"
            android:drawablePadding="8dp"
            android:padding="12dp"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Posts Count Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Related Posts"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_posts_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="14sp"
            android:textColor="#666666" />
    </LinearLayout>

    <!-- Posts List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_posts"
        android:layout_width="match_parent"
        android:layout_height="400dp" />

    <!-- No Posts Message -->
    <TextView
        android:id="@+id/tv_no_posts"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:text="No posts for this restaurant yet.\nBe the first to review!"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="#999999"
        android:visibility="gone" />

</LinearLayout>

