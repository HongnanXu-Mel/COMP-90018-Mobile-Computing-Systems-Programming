<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Full-bleed media -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/imagePager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Overlay container -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/overlayContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Top header -->
        <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="48dp"
            android:paddingBottom="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@drawable/dialog_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/btnClose"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="@string/back"
                app:tint="@android:color/white" />

            <TextView
                android:id="@+id/tvAuthorName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:text="@string/loading"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:shadowColor="#80000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4" />

            <ImageView
                android:id="@+id/btnMoreOptions"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_more_vert"
                android:contentDescription="@string/more_options"
                app:tint="@android:color/white" />

        </LinearLayout>

        <!-- Touch blocker for action icons when footer is extended -->
        <View
            android:id="@+id/touchBlocker"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintTop_toTopOf="@id/actionIcons"
            app:layout_constraintBottom_toBottomOf="@id/actionIcons"
            app:layout_constraintStart_toStartOf="@id/actionIcons"
            app:layout_constraintEnd_toEndOf="@id/actionIcons"
            android:visibility="gone" />

        <!-- Action icons - fixed position -->
        <LinearLayout
            android:id="@+id/actionIcons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/bottomBar"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp">

            <ImageView
                android:id="@+id/btnAccurateIcon"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:src="@drawable/ic_thumb_up"
                android:contentDescription="@string/accurate"
                android:elevation="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp"
                app:tint="@android:color/white"
                android:shadowColor="#80000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4" />

            <ImageView
                android:id="@+id/btnInaccurateIcon"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_thumb_down"
                android:contentDescription="@string/inaccurate"
                android:elevation="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp"
                app:tint="@android:color/white"
                android:shadowColor="#80000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4" />

            <ImageView
                android:id="@+id/btnOpenComments"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_comments"
                android:contentDescription="@string/comments"
                android:elevation="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:padding="6dp"
                app:tint="@android:color/white"
                android:shadowColor="#80000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4" />
        </LinearLayout>

        <!-- Bottom footer -->
        <LinearLayout
            android:id="@+id/bottomBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxHeight="795dp"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingBottom="32dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:background="@drawable/dialog_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Restaurant name -->
            <TextView
                android:id="@+id/tvRestaurantName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/restaurant_placeholder"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:shadowColor="#80000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4"
                android:layout_marginBottom="8dp"
                android:fontFamily="sans-serif-medium"
                android:maxLines="3"
                android:ellipsize="end" />

            <!-- Restaurant address (always visible) -->
            <TextView
                android:id="@+id/tvRestaurantAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/address_placeholder"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:shadowColor="#80000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="16dp"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Restaurant location and category (hidden when collapsed) -->
            <LinearLayout
                android:id="@+id/categoryLocationContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvRestaurantCategory"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/category_placeholder"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:shadowColor="#80000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/tvRestaurantLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/location_placeholder"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:shadowColor="#80000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    android:layout_marginStart="16dp"
                    android:fontFamily="sans-serif" />
            </LinearLayout>

            <!-- Top row: RATING label + stars on left, ACCURACY label + badge on right -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <!-- Left side: RATING -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rating_label"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="@color/star_badge_color"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="0.1"
                        android:layout_marginBottom="4dp" />

                    <LinearLayout
                        android:id="@+id/starContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tvRatingValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="6dp"
                            android:text="@string/rating_placeholder"
                            android:textColor="@color/rating_text_color"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/star1"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/star_rating"
                            android:layout_marginEnd="2dp" />
                        <ImageView
                            android:id="@+id/star2"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/star_rating"
                            android:layout_marginEnd="2dp" />
                        <ImageView
                            android:id="@+id/star3"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/star_rating"
                            android:layout_marginEnd="2dp" />
                        <ImageView
                            android:id="@+id/star4"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/star_rating"
                            android:layout_marginEnd="2dp" />
                        <ImageView
                            android:id="@+id/star5"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/star_rating" />
                    </LinearLayout>


                </LinearLayout>

                <!-- Right side: ACCURACY -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="end">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/accuracy_label"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="@color/accuracy_badge_color"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="0.1"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvDialogAccuracyPercent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/accuracy_placeholder"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/accuracy_badge_color"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>
            </LinearLayout>

            <!-- Caption text (collapsed state) -->
            <TextView
                android:id="@+id/tvDialogCaption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="2dp"
                android:text="@string/description_placeholder"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:background="#20000000"
                android:padding="8dp"
                android:layout_marginBottom="8dp" />

            <!-- Description text -->
            <TextView
                android:id="@+id/tvDialogDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="2dp"
                android:text="@string/description_placeholder"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:background="#20000000"
                android:padding="8dp"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />

            <!-- Expand/Collapse button -->
            <TextView
                android:id="@+id/btnExpandCaption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/read_more"
                android:textColor="@color/logo_accent"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:padding="4dp"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />

            <!-- Scrollable description (expanded state) -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:visibility="gone">

                <ScrollView
                    android:id="@+id/captionScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvDialogCaptionExpanded"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="2dp"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:background="#20000000"
                        android:padding="8dp" />
                </ScrollView>
            </FrameLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>

