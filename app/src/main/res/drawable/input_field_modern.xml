<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused state -->
    <item android:state_focused="true">
        <layer-list>
            <!-- Glow effect -->
            <item android:top="1dp" android:bottom="1dp" android:left="1dp" android:right="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/primary_light" />
                    <corners android:radius="@dimen/corner_radius_medium" />
                </shape>
            </item>
            <!-- Main background -->
            <item android:top="2dp" android:bottom="2dp" android:left="2dp" android:right="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/input_background_light" />
                    <corners android:radius="@dimen/corner_radius_medium" />
                    <stroke
                        android:width="@dimen/border_thick"
                        android:color="@color/input_border_focused" />
                </shape>
            </item>
        </layer-list>
    </item>
    
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/input_background_light" />
            <corners android:radius="@dimen/corner_radius_medium" />
            <stroke
                android:width="@dimen/border_normal"
                android:color="@color/input_border_light" />
        </shape>
    </item>
</selector>
